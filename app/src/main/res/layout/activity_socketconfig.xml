<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ico_main_background">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"/>

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        android:padding="20dp">

        <EditText
            android:id="@+id/serverHostEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_bg"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="192.168.116.2"
            android:textColor="#000000"
            android:hint="请输入IP地址"/>

        <EditText
            android:id="@+id/serverPortEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_bg"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:text="1111"
            android:textColor="#000000"
            android:inputType="number"
            android:hint="请输入端口号"/>

        <Button
            android:id="@+id/serverStartBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg"
            android:text="开始链接"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/serverComEt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#000000"
            android:hint="请输入自定义命令"/>

        <Button
            android:id="@+id/serverComBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_bg"
            android:text="发送命令"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/serverMsgTv"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/white_bg"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:padding="10dp"
            android:text=""
            android:textColor="#000000"
            android:hint="交互显示区域"/>



    </com.qmuiteam.qmui.layout.QMUILinearLayout>



</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2>